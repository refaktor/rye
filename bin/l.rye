; Helper function to ensure rye-fyne go.mod has a replace directive
; pointing github.com/refaktor/rye to the local RYE_HOME
ensure-rye-replace: fn { } {
	rye-home: get-rye-home
	rye-fyne-home: get-rye-home-fyne |to-string
	
	gomod-path: rye-fyne-home ++ "/go.mod"
	
	; Read the go.mod file
	Open to-file gomod-path
	|fix\either
	{
		print "âŒ Could not open " ++ gomod-path
		return false
	}
	{ .Read } :gomod-content
	
	; Check if there's already a replace for github.com/refaktor/rye pointing to local path
	either gomod-content .contains rye-home {
		print "âœ… go.mod already has replace directive pointing to local Rye (" ++ rye-home ++ ")"
		true
	} {
		print "âš™ï¸  Adding replace directive: github.com/refaktor/rye => " ++ rye-home
		result: scmd join [ "cd " rye-fyne-home " && go mod edit -replace github.com/refaktor/rye=" rye-home ]
		either result > 0 {
			print "âŒ Failed to add replace directive"
			print result
			false
		} {
			print "âœ… Replace directive added to " ++ gomod-path
			true
		}
	}
}

; Helper function to load modules from lrye.mod
; Returns a dict with 'modules and 'config keys, or none on error
load-mod-file: fn { } {
	Open %lrye.mod
	|fix\either
	{ 
		print "Error: lrye.mod file not found." 
		print "Please create lrye.mod file and list modules in the format: tiny http bleve"
		exit 1
	}
	{ .Read }
	|load :mod-data
	
	if mod-data .length? = 0 {
		print "[no modules]"
	}

	; Extract modules (first block in file)
	mod-data
	|map { .to-string .concat* "b_" }
	|join\with " " :modules
	
	; Return modules string
	modules
}

; Helper function to get embed copy command
; Returns the copy command if tags contains embed_main, or empty string otherwise
; Also validates that main.rye exists when embed_main is requested
get-embed-command: fn { tags } {
	either tags = "embed_main" {
		var 'command ""
		Open %lrye.files
		|fix\either
		{ 
			print "Error: lrye.files file not found." 
			print "Please create lrye.files file and list files in the format: %main.rye %lib.rye"
			{ %main.rye }
		}
		{ .Read |load }
		:files-data
		|for { ::f
			; Check if main.rye exists in current directory (exists? returns 1 if exists, 0 if not)
			.os/does-exist |either {
				print "* Adding file: " ++ f
				command:: command ++ embed f "cp {} $RYE_HOME/runner/buildtemp/. ; "
			} {
				print embed f "Error: {} not found in current directory."
				exit 1
			}
		} command
	} { "" }
}

; Helper function to execute build command
run-build-command: fn { command } {
	term/spin-it "Building ..." {
		scmd command
	}	
}

build: fn { tags } {
	print-header
	print "\nBuilding local Rye interpreter with modules:"
	
	load-mod-file :modules
	modules |^check { return 0 }
	print modules
	
	out: either tags = "embed_main" { "main" } { "lrye" }

	cp-embed: get-embed-command tags
	cp-embed |^check { return 0 }
	
	var 'command join { 
		cp-embed 
		join [ ` a=$PWD ; cd $RYE_HOME ; go build -tags "` ++ modules ++ " " ++ tags `" -o "$a/` out `" ; cd "$a"` ]
	}
	
	run-build-command command
	
	print join [ "\nBuild completed. You can use binary ./" out " to run it." ]
}

; NEEDS RYE_FYNE_HOME ... (name better)
; Needs rye.fyne go.mod a replace to local rye not github rye for building to work 
; result is built in RYH_FYNE_HOME ... fix that too

build\fyne: fn { tags } {
	print-header
	print "\nBuilding Fyne package with modules:"
	
	; Ensure go.mod has replace directive for local Rye
	ensure-rye-replace |^check { return 0 }
	
	load-mod-file :modules
	modules |^check { return 0 }
	print modules
	
	cp-embed: get-embed-command tags
	cp-embed |^check { return 0 }
	
	; Use tags parameter (default to embed_main if empty)
	build-tags: either tags = "" { "embed_main" "" } { tags }
	
	var 'command join { 
		cp-embed 
		` a=$PWD ; cd $RYE_FYNE_HOME ; fyne build -os linux `
		++ ` -tags "` ++ modules ++ " " ++ build-tags `" -o $a/main ; cd "$a"` 
	}
	
	run-build-command command
	
	print "\nFyne package build completed."
}

package\fyne: fn { tags } {
	print-header
	print "\nBuilding Fyne package with modules:"
	
	; Ensure go.mod has replace directive for local Rye
	ensure-rye-replace |^check { return 0 }
	
	load-mod-file :modules
	modules |^check { return 0 }
	print modules
	
	cp-embed: get-embed-command tags
	cp-embed |^check { return 0 }
	
	; Use tags parameter (default to embed_main if empty)
	build-tags: either tags = "" { "embed_main" "" } { tags }
	
	var 'command join { 
		cp-embed 
		` a=$PWD ; cd $RYE_FYNE_HOME ; fyne package -icon ` ++ default-config/icon 
		++ ` -appVersion ` ++ default-config/app-version 
		++ ` -tags "` ++ modules ++ " " ++ build-tags `" ; cd "$a"` 
	}
	
	run-build-command command
	
	print "\nFyne package build completed."
}

package\fyne\apk: fn { tags } {
	print-header
	print "\nBuilding Fyne package for Android with modules:"
	
	; Ensure go.mod has replace directive for local Rye
	ensure-rye-replace |^check { return 0 }
	
	load-mod-file :modules
	modules |^check { return 0 }
	print modules
	
	cp-embed: get-embed-command tags
	cp-embed |^check { return 0 }
	
	; Use tags parameter (default to embed_main if empty)
	build-tags: either tags = "" { "embed_main" } { tags }
	
	var 'command join { 
		cp-embed 
		` a=$PWD ; cd $RYE_FYNE_HOME ; fyne package -os android/arm64 -appID ` ++ default-config/app-id 
		++ ` -icon ` ++ default-config/icon 
		++ ` -appVersion ` ++ default-config/app-version 
		++ ` -tags "` ++ modules ++ " " ++ build-tags `" ; cd "$a"` 
	}
	
	run-build-command command
	
	print "\nFyne package build completed for Android."
}

