	build          { validate-env false |if { build tags } }
	build-fyne     { validate-env true |if { build\fyne tags } }
	package-fyne   { validate-env true |if { package\fyne tags } }
	package-fyne-apk { validate-env true |if { package\fyne\apk tags } }
	setup          { print-setup }
	install        { install-ryel }
	version        { print-version }
	help           { print-help }
	_              { print-help }
}
