
print "Testing Secret Type"

s: secret "my-secret-password"

print "1. Creating secret:"
inspect s
print s

print "2. Revealing secret:"
revealed: reveal s
print revealed

print "3. Substring of secret (Infection Rule):"
sub: substring s 3 9
inspect sub
print sub
print "Revealed substring:"
print reveal sub

print "4. Substring of revealed secret:"
sub-revealed: substring revealed 3 9
print sub-revealed

print "5. Attempting forbidden operation (Black Hole Rule):"
try { s .ln }
try { s .to-upper }
