{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}", "notIn": ["string", "comment"] },
    { "open": "[", "close": "]", "notIn": ["string", "comment"] },
    { "open": "(", "close": ")", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["`", "`"]
  ],
  "colorizedBracketPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "folding": {
    "markers": {
      "start": "\\{",
      "end": "\\}"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9\\-?!.*+<>=\\\\]*",
  "indentationRules": {
    "increaseIndentPattern": ".*\\{[^}]*$",
    "decreaseIndentPattern": "^\\s*\\}"
  }
}
