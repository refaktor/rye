
hello-resource: context {
 
	say-hello: fn { w r } {
		write w "Hello From Resource!" 
	}

}

handle-web-resource: fn { w r res } {
	query? r "_m" |to-word :name
	res -> name :func
	func w r 
}

handle-api: fn { w r } {
	handle-web-resource w r hello-resource
}

print hello-resource

new-server ":8080"
|handle "/api" ?handle-api  
|serve
